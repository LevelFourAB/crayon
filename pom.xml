<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	
	<modelVersion>4.0.0</modelVersion>
	
	<groupId>se.l4.crayon</groupId>
	<version>0.2</version>
	<artifactId>crayon</artifactId>

	<name>crayon-base</name>
	
	<packaging>pom</packaging>

	<modules>
		<module>crayon-core</module>
		<module>crayon-lib-types</module>
		<module>crayon-lib-error</module>
		<module>crayon-lib-services</module>
	</modules>

	<!-- License -->
	<licenses>
		<license>
			<name>Apache 2</name>
			<url>http://www.apache.org/licenses/LICENSE-2.0.txt</url>
			<distribution>repo</distribution>
		</license>
	</licenses>

	<!-- Common dependencies (for testing) -->
	<dependencies>
		<dependency>
			<groupId>org.slf4j</groupId>
			<artifactId>slf4j-simple</artifactId>
			<version>1.4.3</version>
			<scope>test</scope>
		</dependency>
		
		<dependency>
			<groupId>org.testng</groupId>
			<artifactId>testng</artifactId>
			<version>5.1</version>
			<classifier>jdk15</classifier>
			<scope>test</scope>
		</dependency>
		
		<dependency>
			<groupId>org.easymock</groupId>
			<artifactId>easymock</artifactId>
			<version>2.3</version>
			<scope>test</scope>
		</dependency>
	</dependencies>

	<distributionManagement>
		<repository>
			<id>crayon</id>
			<name>Crayon Release Repository</name>
			<url>file:${crayon.repository}/releases</url>
		</repository>
		<snapshotRepository>
			<id>crayon</id>
			<name>Crayon Snapshot Repository</name>
			<url>file:${crayon.repository}/snapshots</url>
		</snapshotRepository>
	</distributionManagement>

	<repositories>
		<repository>
			<id>crayon</id>
			<name>Crayon Release Repository</name>
			<url>http://crayon-java.googlecode.com/svn/repository/releases</url>
			
			<releases>
				<enabled>true</enabled>
			</releases>
			<snapshots>
				<enabled>false</enabled>
			</snapshots>
		</repository>
		<repository>
			<id>crayon</id>
			<name>Crayon Snapshot Repository</name>
			<url>http://crayon-java.googlecode.com/svn/repository/snapshots</url>

			<releases>
				<enabled>false</enabled>
			</releases>
			<snapshots>
				<enabled>true</enabled>
			</snapshots>
		</repository>
	</repositories>
	
	<!-- SCM -->
	<scm>
		<connection>scm:svn:http://crayon-java.googlecode.com/svn/tags/crayon-0.2</connection>
	</scm>

	<build>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-source-plugin</artifactId>
				<executions>
					<execution>
						<id>attach-sources</id>
						<goals>
							<goal>jar</goal>
						</goals>
					</execution>
				</executions>
			</plugin>
		</plugins>
	</build>
</project>
